<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<defaultProtocol type="Servlet 3.0" />

	<engine>
		<property name="deploymentExportPath">target/arquillian</property>
	</engine>

	<container qualifier="jboss_managed_eclipse" default="false">
		<!-- SET JBOSS_HOME system property to location where your jboss is -->
		<!--   -Djboss.socket.binding.port-offset=600  -->
		<configuration>
			<!-- <property name="jbossHome">${jboss.home}</property> -->
			<property name="serverConfig">standalone-full-ha.xml</property>
			<property name="javaVmArguments">			
			-Xmx1024m -XX:MaxPermSize=256m
			-Djboss.bind.address=127.0.0.1
			-Djboss.node.name=MED-MC-MS-JEE-TEST 
			-Djboss.messaging.group.address=231.2.2.16
			-Djboss.messaging.group.port=7914 
			-Djgroups.udp.mcast_addr=230.2.2.16 
			-Djgroups.udp.mcast_port=41124 
			-Djgroups.mping.mcast_addr=230.2.2.16 
			-Djgroups.mping.mcast_port=41213
			-Dorg.jboss.as.logging.per-deployment=false
			-Dcom.ericsson.oss.sdk.tracing.autoannotate=off
			-Dcom.ericsson.oss.itpf.sdk.cache.statistic=off
			-Dcom.ericsson.oss.sdk.config.properties.polling.period=15000
			-DModelService.root.modelPath=src/test/resources/jboss-settings/models
			-Ddatapath.dir=src/test/resources/jboss-settings/models
			-DdataPersistence.cache.persist.disabled=true						
			-Dericsson-model-service-root=src/test/resources/xml 			
			</property>
		</configuration>
	</container>

	<!-- -Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=y -->
        <!--   -Djboss.socket.binding.port-offset=600  -->
	<container qualifier="jboss_managed" default="true">
		<!-- SET JBOSS_HOME system property to location where your jboss is -->
		<configuration>
			<property name="jbossHome">${jboss.home}</property>
			<property name="serverConfig">standalone-full-ha.xml</property>
			<property name="javaVmArguments">-Xmx512m -XX:MaxPermSize=256m 
			-Djboss.node.name=MED-MC-JEE-TEST 
			-Dcom.ericsson.oss.sdk.node.identifier=MED-MC-JEE-TEST
			-Djboss.messaging.group.address=231.2.2.16
			-Djboss.messaging.group.port=7914 
			-Djgroups.udp.mcast_addr=230.2.2.16 
			-Djgroups.udp.mcast_port=41124 
			-Djgroups.mping.mcast_addr=230.2.2.16 
			-Djgroups.mping.mcast_port=41213
			-Dorg.jboss.as.logging.per-deployment=false
			-Dcom.ericsson.oss.sdk.tracing.autoannotate=off
			-Dcom.ericsson.oss.itpf.sdk.cache.statistic=off
			-Dcom.ericsson.oss.sdk.config.properties.polling.period=15000
			-DOSS_IP=10.45.236.20
			-Dcom.ericsson.oss.sdk.config.default.properties.path=src/test/app_properties/conf
			-DModelService.root.modelPath=src/test/app_properties/models
			-Ddatapath.dir=src/test/app_properties/models
			-DdataPersistence.cache.persist.disabled=true
			-Dcom.ericsson.oss.itpf.sdk.cache.persistence.location.absolute.path=${cache.home}
			-Dericsson-model-service-root=src/test/resources/xml		
			-Djboss.tx.node.id=MED-MC-JEE-TEST 
            -Dcom.arjuna.orbportability.initialReferencesRoot=${jboss.home} 
            -Ddps.ear.build.dir=target/dps_work
            -DXML_REPO_PATH=target/deployed-model/modelRepo.xml
            -Dericsson-model-service-root=target/deployed-model
			</property>
			<property name="managementPort">9999</property>
		</configuration>
	</container>

	<container qualifier="jboss_remote" default="false">
		<configuration>
			<property name="managementAddress">127.0.0.1</property>
			<property name="managementPort ">9999</property>
			<property name="outputToConsole">true</property>
			<property name="allowConnectingToRunningServer">true</property>
		</configuration>
	</container>

	<container qualifier="glassfish_embedded" default="false" />


	<container qualifier="glassfish_managed" default="false">
		<configuration>
			<property name="glassFishHome">${glassfish.home}</property>
		</configuration>
	</container>

	<container qualifier="glassfish_remote" default="false">
		<configuration>
			<property name="target">server</property>
			<!-- <property name="adminHost">127.0.0.1</property> -->
			<!-- <property name="adminUser">admin</property> <property name="adminPassword">semafor</property> -->
		</configuration>
	</container>

</arquillian>
  
